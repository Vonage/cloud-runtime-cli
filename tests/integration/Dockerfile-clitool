FROM alpine:3.20

RUN apk add --no-cache bash curl

WORKDIR /app

# Copy pre-built binary from CI
COPY bin/vcr-cli /app/vcr-cli

# Copy test scripts and data
COPY scripts/run_clitool.sh /app/run_clitool.sh
COPY testdata /app/tests/integration/testdata

RUN chmod +x /app/vcr-cli /app/run_clitool.sh

CMD ["/app/run_clitool.sh"]
